            </div>
          </div>
        </div>

        <div class="simple_form-add-clothing">
          <%= simple_form_for(@clothing) do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :available_sizes %>
            <%= f.input :price %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>


      <!-- Description et Achat -->
